<nav>
    <ol class="breadcrumb navbar-righ">
        <li class="breadcrumb-item active ml-auto">
            Dashboard
        </li>
    </ol>
</nav>

<section>
    <h1 class="pt-2">
        <i class="fas fa-tachometer-alt"></i> Dashboard
    </h1>

    <div class="row">
        <div class="col-md mb-5">
            <div class="card border-primary">
                <div class="card-body">
                <h5 class="card-title"><i class="fa fa-gopuram"></i> Manage buildings <span class="float-right">Total # <%= @sizes[:buildings] %></span></h5>
                <p class="card-text"></p>
                </div>
                <div class="card-footer">
                    <%= link_to "Manage", admin_buildings_path, {class: "btn btn-default"} %>
                </div>
            </div>
        </div>
        <div class="col-md mb-5">
            <div class="card border-success">
                <div class="card-body">
                <h5 class="card-title"><i class="fab fa-discourse"></i></i> Manage courses <span class="float-right">Total # <%= @sizes[:courses] %></span></h5>
                <p class="card-text"></p>
                </div>
                <div class="card-footer">
                    <%= link_to "Manage", admin_courses_path, {class: "btn btn-default"} %>
                </div>
            </div>
        </div>
        <div class="col-md mb-5">
            <div class="card border-info">
                <div class="card-body">
                <h5 class="card-title"><i class="fas fa-graduation-cap"></i> Manage students <span class="float-right">Total # <%= @sizes[:students] %></span></h5>
                <p class="card-text"></p>
                </div>
                <div class="card-footer">
                    <%= link_to "Manage", admin_students_path, {class: "btn btn-default"} %>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md mb-5">
            <div class="card border-warning">
                <div class="card-body">
                <h5 class="card-title"><i class="fas fa-chalkboard-teacher"></i> Manage teachers <span class="float-right">Total # <%= @sizes[:teachers] %></span></h5>
                </div>
                <div class="card-footer">
                    <%= link_to "Manage", admin_teachers_path, {class: "btn btn-default"} %>
                </div>
            </div>
        </div>
        <div class="col-md mb-5">
        </div>
        <div class="col-md mb-5">
        </div>
    </div>
</section>